datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Product {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  price       Float
  image       String
  stock       Int
  category    String?
  createdAt   DateTime @default(now())
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  addresses Address[]
  orders    Order[]
}

model Address {
  id        Int      @id @default(autoincrement())
  fullName  String
  phone     String
  pincode   String
  line1     String
  line2     String?
  city      String
  state     String
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  createdAt DateTime @default(now())
  orders   Order[]
}

model Order {
  id         Int         @id @default(autoincrement())
  user       User        @relation(fields: [userId], references: [id])
  userId     Int
  address    Address     @relation(fields: [addressId], references: [id])
  addressId  Int
  total      Float
  status     String   @default("PENDING")
  createdAt  DateTime    @default(now())
  items      OrderItem[]
}

model OrderItem {
  id        Int      @id @default(autoincrement())
  order     Order    @relation(fields: [orderId], references: [id])
  orderId   Int
  productId Int
  title     String
  price     Float
  quantity  Int
}
